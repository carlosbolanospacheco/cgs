<section class="content-header">
  <h1 id="cabeceraGeneral">
    Modelo 13
    <small>Datos para la generación del documento</small>
  </h1>
</section>
<section class="content">
  <div class="box box-primary">
    <%= form_tag colegio_presentar_documento_path(documento_id: Documento.find_by(codigo: 'modelo_13').id, colegio_id: @colegio.id), method: :post, remote: true do %>
      <div class="box-body">
        <div class="row">
          <div class="col-md-12">
            <div class="form-group">
              <p>Indica el período para el que se desea generar el documento</p>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-2">
            <div class="form-group">
              <%= select_tag :mes, options_for_select((1..12).map { |m| [t('date.month_names')[m], m] }, Date.today.month), {class: "form-control"} %>
            </div>
          </div>
          <div class="col-md-2">
            <div class="form-group">
              <%= select_tag :anyo, options_for_select((Date.today.year-3..Date.today.year).map { |m| [m, m] }, Date.today.year), {class: "form-control"} %>
            </div>
          </div>
        </div>
      </div>
      <div class="box-footer">
        <%= button_tag 'Confirmar', id: 'generarButton', class: "btn btn-success" %>
      </div>
    <% end %>
  </div>
  <div class="box box-primary hidden" id="datos_modelo_13">
  </div>
  <div class="box box-primary">
    <div class="box-body canvas_listado_documentos">
      <%= render 'colegios/listado_documentos_modelo_13' %>
    </div>
  </div>
</section>

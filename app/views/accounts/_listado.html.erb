<table id="listado-cuentas" class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Banco</th>
      <th>IBAN</th>
      <th>Código entidad</th>
      <th>Código oficina</th>
      <th>Dígitos de control</th>
      <th>Número de cuenta</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @cuentas.each do |cuenta| %>
      <tr>
        <td><%= cuenta.banco.nombre %></td>
        <td><%= cuenta.iban %></td>
        <td><%= cuenta.banco.clave_entidad %></td>
        <td><%= cuenta.oficina %></td>
        <td><%= cuenta.digitos_control %></td>
        <td><%= cuenta.cuenta %></td>
        <td>
          <%= link_to "", edit_account_path(cuenta), remote: true, class: "fa fa-edit" %>
        </td>
        <td>
          <%= link_to "", account_path(cuenta), remote: true, method: :delete,
                      class: "fa fa-trash", data: { confirm: '¿Confirma que quiere eliminar la cuenta bancaria?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<script>
$(document).ready(function () {
    $("#listado-cuentas").DataTable(
      {"ordering": false,
       "language": {
         "paginate": {
           "next": "Siguiente",
           "previous": "Anterior" },
         "search": "Filtrar cuentas bancarias",
         "info": "Mostrando página _PAGE_ de _PAGES_",
         "emptyTable": "No existen cuentas bancarias",
         "lengthMenu": "Mostrando _MENU_ cuentas por página",
         "infoEmpty": "No se muestran cuentas",
         "infoFiltered": "(filtrado de un total de _MAX_ cuentas)",
         "zeroRecords": "No existen cuentas que se ajusten a este filtro"
       }
      }
    );
  });
</script>

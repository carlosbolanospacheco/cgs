<div class="box-header">
  <h3 class="modal-title">Editar documento</h3>
  <small>Edite el texto del documento a generar para el colegiado <%= colegiado.nombre_texto %></small>
</div>
<%= form_tag documento_pdf_colegiados_path(format: 'pdf', documento_id: documento, colegiado_id: colegiado) do %>
  <div class="box-body pad">
    <%= text_area_tag 'cuerpoDocumento', contenido_documento, style:"width: 100%; height: 300px; font-size: 14px; line-height: 18px; border: 1px solid #dddddd; padding: 10px;" %>
  </div>
  <div class="box-footer">
    <%= button_tag 'Generar', id: 'generarButton', formtarget: '_blank', class: "btn btn-success" %>
    <button type="button" class="btn btn-danger cancelEditButton">Cancelar</button>
  </div>
<% end %>
<script>
$(document).ready(function(){
  $("#cuerpoDocumento").wysihtml5();
  $(".cancelEditButton").click(function(){
    $("#canvas_documento").empty();
    $("#box_documento").addClass('hidden');
  });
});
</script>

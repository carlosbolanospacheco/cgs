<table id="listado-causa-bajas" class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Código</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @causa_bajas.each do |causa_baja| %>
      <tr>
        <td><%= causa_baja.nombre %></td>
        <td><%= causa_baja.codigo %></td>
        <td>
          <%= link_to "", edit_causa_baja_path(causa_baja), remote: true, class: "fa fa-edit" %>
        </td>
        <td>
          <%= link_to "", causa_baja_path(causa_baja), remote: true, method: :delete,
                      class: "fa fa-trash", data: { confirm: '¿Confirma que quiere eliminar la causa?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<script>
$(document).ready(function () {
    $("#listado-causa-bajas").DataTable(
      {"ordering": false,
       "language": {
         "paginate": {
           "next": "Siguiente",
           "previous": "Anterior" },
         "search": "Filtrar causas de baja",
         "info": "Mostrando página _PAGE_ de _PAGES_",
         "emptyTable": "No existen causas de baja",
         "lengthMenu": "Mostrando _MENU_ causas por página",
         "infoEmpty": "No se muestran causas de baja",
         "infoFiltered": "(filtrado de un total de _MAX_ causas)",
         "zeroRecords": "No existen causas que se ajusten a este filtro"
       }
      }
    );
  });
</script>

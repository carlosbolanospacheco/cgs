<%= form_for @banco, remote:true, html: {autocomplete: 'off'} do |f| %>
  <div class="box-body">
    <%= render 'shared/errors', object: f.object %>
    <div class="row">
      <div class="col-md-3">
        <div class="form-group">
          <%= f.label :nombre, 'Nombre *' %>
          <div class="input-group">
            <div class="input-group-addon">
              <i class="fa fa-bank"></i>
            </div>
            <%= f.text_field :nombre, class: "form-control", required: "required", placeholder: "Nombre del banco" %>
          </div>
        </div>
      </div>
      <div class="col-md-3">
        <div class="form-group">
          <%= f.label :codigo_pais, "País *" %>
          <%= f.select :codigo_pais, options_for_select(Pais.all.collect{|u| ["#{u.nombre}", "#{u.codigo}"]}, @banco.codigo_pais ? @banco.codigo_pais : 'ES'), {}, {class: "form-control"} %>
        </div>
      </div>
      <div class="col-md-2">
        <div class="form-group">
          <%= f.label :codigo_entidad, 'Código entidad (4) *' %>
          <div class="input-group">
            <div class="input-group-addon">
              <i class="fa fa-building-o"></i>
            </div>
            <%= f.text_field :codigo_entidad, class: "form-control", required: "required", placeholder: "Código entidad" %>
          </div>
        </div>
      </div>
      <div class="col-md-2">
        <div class="form-group">
          <%= f.label :clave_entidad, 'Clave entidad (4) *' %>
          <div class="input-group">
            <div class="input-group-addon">
              <i class="fa fa-key"></i>
            </div>
            <%= f.text_field :clave_entidad, class: "form-control", required: "required", placeholder: "Clave entidad" %>
          </div>
        </div>
      </div>
      <div class="col-md-2">
        <div class="form-group">
          <%= f.label :codigo_localidad, 'Código localidad (2) *' %>
          <div class="input-group">
            <div class="input-group-addon">
              <i class="fa fa-globe"></i>
            </div>
            <%= f.text_field :codigo_localidad, class:"form-control", placeholder: "Código localidad", required: "required" %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="box-footer">
    <button type="submit" class="btn btn-success">Guardar</button>
    <button type="button" class="btn btn-danger cancelButton">Cancelar</button>
  </div>
<% end %>
<script>
$(document).ready(function(){
    $(".cancelButton").click(function(){
       $(".canvas_banco").empty();
       $(".box_banco").addClass('hidden');
    });
  });
</script>

<table id="listado-bancos" class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>BIC</th>
      <th>Código País</th>
      <th>Código Entidad</th>
      <th>Clave Entidad</th>
      <th>Código Localidad</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @bancos.each do |banco| %>
      <tr>
        <td><%= banco.nombre %></td>
        <td><%= banco.bic %></td>
        <td><%= banco.codigo_pais %></td>
        <td><%= banco.codigo_entidad %></td>
        <td><%= banco.clave_entidad %></td>
        <td><%= banco.codigo_localidad %></td>
        <td>
          <%= link_to "", edit_banco_path(banco), remote: true, class: "fa fa-edit" %>
        </td>
        <td>
          <%= link_to "", banco_path(banco), remote: true, method: :delete,
                      class: "fa fa-trash", data: { confirm: '¿Confirma que quiere eliminar el banco?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<script>
$(document).ready(function () {
    $("#listado-bancos").DataTable(
      {"ordering": false,
       "language": {
         "paginate": {
           "next": "Siguiente",
           "previous": "Anterior" },
         "search": "Filtrar entidades bancarias",
         "info": "Mostrando página _PAGE_ de _PAGES_",
         "emptyTable": "No existen entidades bancarias",
         "lengthMenu": "Mostrando _MENU_ entidades por página",
         "infoEmpty": "No se muestran entidades",
         "infoFiltered": "(filtrado de un total de _MAX_ entidades)",
         "zeroRecords": "No existen entidades que se ajusten a este filtro"
       }
      }
    );
  });
</script>

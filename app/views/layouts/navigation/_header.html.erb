<%= link_to 'CGS', root_path, class: 'logo', remote: true %>
<nav class="navbar navbar-static-top" role="navigation">
  <div class="navbar-custom-menu">
    <ul class="nav navbar-nav">
      <% if user_signed_in? %>
        <li class="dropdown user user-menu">
          <a class="dropdown-toggle" data-toggle="dropdown" href="#">
            <%= image_tag current_user.avatar.url(:thumb), class: 'user-image' %>
          <span class="hidden-xs"><%= current_user ? current_user.nombre : 'Desconocido' %></span>
          </a>
          <ul class="dropdown-menu">
            <li class="user-header">
              <%= image_tag current_user.avatar.url(:thumb), class: 'img-circle' %>
              <p>
                <%= current_user.nombre %>
                <small><%= current_user.rol %></small>
              </p>
            </li>
            <li class="user-footer">
              <div class="pull-left">
                <%= link_to 'Editar perfil', edit_user_registration_path, remote: true, class: "btn btn-default btn-flat" %>
              </div>
              <div class="pull-right">
                <%= link_to 'Salir', destroy_user_session_path, method: :delete, class: "btn btn-default btn-flat" %>
              </div>
            </li>
          </ul>
        </li>
      <% end %>
    </ul>
  </div>
</nav>

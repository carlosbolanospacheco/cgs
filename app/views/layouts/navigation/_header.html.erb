<%= link_to root_path, class: 'logo', remote: true do %>
  <!-- mini logo for sidebar mini 50x50 pixels -->
  <span class="logo-mini">Colegio de Graduados Sociales de Asturias</span>
  <!-- logo for regular state and mobile devices -->
  <span class="logo-lg">
    <%= image_tag 'logos/logo_cgs.png', alt: 'Ir al listado de Colegiados', size: '50x50' %>
  </span>
<% end %>
<nav class="navbar navbar-static-top" role="navigation">
  <!-- Sidebar toggle button-->
  <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
    <span class="sr-only">Toggle navigation</span>
    <span class="icon-bar"></span>
    <span class="icon-bar"></span>
    <span class="icon-bar"></span>
  </a>
  <div class="navbar-custom-menu">
    <ul class="nav navbar-nav">
      <% if user_signed_in? %>
        <li class="dropdown user user-menu">
          <a class="dropdown-toggle" data-toggle="dropdown" href="#">
            <%= image_tag current_user.avatar.url(:thumb), class: 'user-image' %>
          <span class="hidden-xs"><%= current_user ? current_user.nombre : 'Desconocido' %></span>
          </a>
          <ul class="dropdown-menu">
            <li class="user-header">
              <%= image_tag current_user.avatar.url(:thumb), class: 'img-circle' %>
              <p>
                <%= current_user.nombre %>
                <small><%= current_user.rol %></small>
              </p>
            </li>
            <li class="user-footer">
              <div class="pull-left">
                <%= link_to 'Editar perfil', edit_user_registration_path, remote: true, class: "btn btn-default btn-flat" %>
              </div>
              <div class="pull-right">
                <%= link_to 'Salir', destroy_user_session_path, method: :delete, class: "btn btn-default btn-flat" %>
              </div>
            </li>
          </ul>
        </li>
      <% end %>
    </ul>
  </div>
</nav>
